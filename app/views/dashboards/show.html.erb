<div class="dashboard-container">
  <div class="left-nav">
    LEFT NAV
  </div>
  <div class="main" data-controller="drag-and-drop" data-drag-url="/sections/:id/move">
    <% @dashboard.sections.each do |section| %>
      <div class="section" data-target="drag-and-drop.id" data-id="<%= section.id %>" data-position="<%= section.position %>">
        <div class="handle">
          <i class="fas fa-grip-vertical"></i>
        </div>
        <div class="section-content">
          ID <%= section.id %>
          <br>
          POSITION <%= section.position %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .handle {
    height: 100%;
    display: flex;
    align-items: center;
    padding: 12px;
  }
  .dashboard-container {
    display: grid;
    grid-template-columns: 240px 1fr;
  }
  .left-nav {
    grid-column: 1 / 2;
  }
  .main {
    display: flex;
    flex-wrap: wrap;
    height: 90vh;
  }
  .section {
    display: flex;
    background: #fff;
    padding: 24px 24px 24px 0;
    margin: 2px;
    border-radius: 6px;
    width: 100%;
  }
  .sortable-ghost {
    opacity: 0.3;
  }
  .sortable-drag {
    background: blue;
  }
</style>
